<div class="container pb-8">
  <div class="user_grid row justify-content-between">
    <div class="col-4 ">
      <h1><strong>Hello <%=current_user.first_name%>!</strong></h1>
      <h2>Welcome to your profile</h2>
    </div>
    <div class="col-2" >
        <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, class: "img-thumbnail rounded", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
          <%= image_tag "empty_avatar.jpg", class: "img-thumbnail rounded", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>

    </div>
  </div>

  <div class="user_grid row">
    <h2>Personal details</h2>
    <div>
      <h3>Address:</h3>
      <p><%=current_user.address%></li></p>
    </div>
  </div>

  <div class="user_grid row">
    <h2>Your plant purchases</h2>
      <% @purchases.each do |plant| %>
        <li>ID:<%= plant.plant.id %>. <%= plant.plant.title %> X <%= plant.quantity_purchased %> - £<%= (plant.plant.price_per_clipping * plant.quantity_purchased).round(2) %></li>
        <%= link_to 'Review', new_purchase_review_path(plant) %>
      <% end %>
  </div>
  <div class="user_grid row">
    <h2>Your Listed plants</h2>
      <% @listings.each do |plant| %>
        <li>ID:<%= plant.id %>. <%= plant.title %> - £<%= plant.price_per_clipping %></li>
        <%= link_to "Edit listing", edit_plant_path(plant) %>
      <% end %>
  </div>
    <div class="user_grid row">
    <h2>Plants You've Sold</h2>
      <% total = 0 %>
      <% @sales.each do |plant| %>
        <li>ID:<%= plant.plant.id %>. <%= plant.plant.title %> X <%= plant.quantity_purchased %> - £<%= (plant.plant.price_per_clipping * plant.quantity_purchased).round(2) %></li>
        <% total += plant.plant.price_per_clipping * plant.quantity_purchased %>
      <% end %>
      <h3>Total sales: £<%= total %> </h3>
  </div>
</div>
