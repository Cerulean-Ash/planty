<div class="details-card-body">
  <div class="seller-details">
    <p class='seller'>Posted by: <%= plant.user_id %></p>
    <p>Rating: </p>
  </div>
  <hr>
  <div class="plant-details">
    <h1><%= plant.title %></h1>
    <p>Color: <%= plant.color %></p>
    <p>Ease of care: <%= plant.care_type %></p>
    <p><%= plant.description %></p>
  </div>
  <hr>
  <div class="purchase-option">
    <p>Available cuttings: <%= plant.number_of_clippings %></p>
  </div>

  <div class="form-container" data-controller='purchase-controls'>
    <div class="header">
      <div class="header-row">
        <div class="big-bold" id="price" data-amount-cents="<%= plant.price_per_clipping %>">
          Â£<%= plant.price_per_clipping %>
        </div>
        <div class="small-light"> / CUTTING</div>
      </div>
    </div>

    <div class="flex-between">
      Cuttings:
      <div class="actions">
        <a id="minus" class="btn round-bordered incrementer minus" data-offset="-1">-</a>
        <span id="counter" data-purchase-controls-target="counter" data-count="1">1</span>
        <a id="plus" data-action="purchase-controls#increment" href="#" class="btn round-bordered incrementer" data-offset="1">+</a>
      </div>
    </div>

    <form>
      <input type="number" value="<%= plant.price_per_clipping %>" disabled class="form-control" id="price-input" name="price-cents">
      <input type="submit" value="Pay <%= plant.price_per_clipping %>" class="btn btn-primary" id="submit">
    </form>
  </div>

</div>
