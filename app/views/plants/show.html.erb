<div class="container pb-8">
 <div class="row justify-content-between">
  <div class="show-plants-grid">
    <div class="show-plants-grid__image-container d-flex flex-column">
      <p id="hard_id">Browse pictures</p>
      <%= render "plant_image_previews", plant: @plant %>
    </div>
    <div class="show-plants-grid__carousel-container m-4">
      <%= render "plant_carousel", plant: @plant %>
    </div>
    <div class="show-plants-grid__details-container m-4">
      <%= render "details_card", plant: @plant %>
    </div>
  </div>
  </div>

  <div class="reviews-container">
    <div class="review-box">
      <% if @plant.purchases.present? && @plant.purchases.any? {|purchase| purchase.review.present?} %>
        <% @plant.purchases.each do |purchase| %>
        <% purchase.review.rating.to_i.times do %>
          <i class="fa-solid fa-star pb-2" style="color: gold"></i>
        <% end %>
        <p class="border-bottom border-secondary pb-4"><%= purchase.review.comment %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
