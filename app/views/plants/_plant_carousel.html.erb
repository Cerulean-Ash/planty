<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <% if plant.photos.attached? %>
      <% plant.photos.each_with_index do |photo, index| %>
        <% if  index == 0 %>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <% else %>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= index %>" aria-label="Slide <%= index + 1 %>"></button>
        <% end %>
      <% end %>
    <% else %>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <% end %>

  </div>

  <div class="carousel-inner" id='image-display-carousel'>
    <% if plant.photos.attached? %>
      <% plant.photos.each_with_index do |photo, index| %>
        <%= index == 0 ? '<div class="carousel-item active">'.html_safe : '<div class="carousel-item">'.html_safe  %>
          <img src="<%= cl_image_path photo.key, crop: :fill, width: 1000, height: 1000 %>" class="d-block w-100" alt="...">
        </div>
      <% end %>
    <% else %>
      <div class="carousel-item active">
        <%= image_tag "plant1.jpg", class:"d-block w-100" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "plant2.jpg", class:"d-block w-100" %>
      </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
